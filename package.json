{
  "name": "vfast",
  "version": "1.0.0",
  "description": "A fast and modern mobro theme",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "parcel build public/index.pug --out-dir ./",
    "start": "parcel public/index.pug --open --out-dir ./.www"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/styled-components": "^5.1.3",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-custom-dist-structure": "^1.1.16",
    "parcel-plugin-html-externals": "^0.2.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "pug": "^3.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "preact": "^10.5.4",
    "preact-compat": "^3.19.0",
    "styled-components": "^5.2.0"
  },
  "customDistStructure": {
    "config": {
      ".js": "js",
      ".js.map": "js"
    }
  },
  "externals": {
    "*/**/sdk.js": false
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
