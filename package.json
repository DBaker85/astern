{
  "name": "vfast",
  "version": "1.0.0",
  "description": "A fast and modern mobro theme",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run clean && parcel build src/index.pug --out-dir ./theme && npm run sdk:path",
    "start": "parcel src/index.pug --open --out-dir ./.www",
    "sdk:path": "ts-node --skip-project buildScripts/addSdk.ts",
    "clean": "del-cli theme/assets"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/node": "^14.11.5",
    "@types/styled-components": "^5.1.3",
    "del-cli": "^3.0.1",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-custom-dist-structure": "^1.1.16",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "pug": "^3.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "preact": "^10.5.4",
    "preact-compat": "^3.19.0",
    "regenerator-runtime": "^0.13.7",
    "styled-components": "^5.2.0"
  },
  "customDistStructure": {
    "config": {
      ".js": "assets",
      ".js.map": "assets",
      ".woff2": "assets"
    }
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
