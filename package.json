{
  "name": "astern",
  "version": "0.0.1",
  "description": "A fast and modern mobro theme",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run clean && parcel build src/index.pug --dist-dir ./theme && npm run sdk:path",
    "start": "parcel src/index.pug --open --dist-dir ./.www",
    "sdk:path": "ts-node --skip-project buildScripts/addSdk.ts",
    "clean": "del-cli theme/assets"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/node": "^14.11.5",
    "@types/react": "^16.9.51",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/redux": "^3.6.0",
    "@types/styled-components": "^5.1.3",
    "del-cli": "^3.0.1",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "parcel": "^2.0.0-beta.1",
    "parcel-plugin-structurize": "^2.1.3",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "pug": "^3.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.4.0",
    "preact": "^10.5.4",
    "react-redux": "^7.2.1",
    "redux": "^4.0.5",
    "regenerator-runtime": "^0.13.7",
    "styled-components": "^5.2.0"
  },
  "parcel-plugin-structurize": {
    "rules": [
      {
        "match": "*.{js,js.map,woff2}",
        "folder": "assets"
      }
    ]
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
